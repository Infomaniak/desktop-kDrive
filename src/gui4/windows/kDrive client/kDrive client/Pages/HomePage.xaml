<Page x:Class="Infomaniak.kDrive.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Infomaniak.kDrive"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Infomaniak.kDrive.CustomControls"
      xmlns:converters="using:Infomaniak.kDrive.Converters"
      mc:Ignorable="d">
    <Page.Resources>
        <converters:BooleanToInvertedVisibilityConverter  x:Key="BooleanToInvertedVisibilityConverter" />
    </Page.Resources>
    <Grid Margin="24"
          RowSpacing="24"
          ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Update banner -->
            <RowDefinition Height="Auto" />
            <!-- Sync status bar -->
            <RowDefinition Height="*" />
            <!-- Main content -->
            <RowDefinition Height="Auto" />
            <!-- Upgrade offer bar -->
        </Grid.RowDefinitions>

        <!-- Update Available Banner -->
        <controls:UpdateAvailableBar Grid.Row="0"
                                     Grid.ColumnSpan="2"
                                     Visibility="Visible" />

        <!-- Sync Status Bar -->
        <controls:SyncStatusBar Grid.Row="1" />

        <!-- Left main pane -->
        <controls:SyncActivityTable Grid.Row="2"
                                    Grid.Column="0" />

        <!-- Right Side Buttons -->
        <Grid Grid.Row="2"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Click="FavoritesButton_Click"
                    CornerRadius="8"
                    Padding="0"
                    Grid.Row="0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,8"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Orientation="Vertical">
                    <ImageIcon Height="16"
                               Margin="0,0,0,8">
                        <ImageIcon.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/Icons/star.svg" />
                        </ImageIcon.Source>
                    </ImageIcon>
                    <TextBlock x:Uid="Page_HomePage_favorites"
                               Style="{StaticResource TextBlockStyle}" />
                </StackPanel>
            </Button>
            <Button Click="SharedButton_Click"
                    CornerRadius="8"
                    Padding="0"
                    Grid.Row="1"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,8,0,8"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Orientation="Vertical">
                    <ImageIcon Height="16"
                               Margin="0,0,0,8">
                        <ImageIcon.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/Icons/share.svg" />
                        </ImageIcon.Source>
                    </ImageIcon>
                    <TextBlock x:Uid="Page_HomePage_shared"
                               Style="{StaticResource TextBlockStyle}" />
                </StackPanel>
            </Button>
            <Button Click="TrashButton_Click"
                    CornerRadius="8"
                    Padding="0"
                    Grid.Row="2"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,8,0,0"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Orientation="Vertical">
                    <ImageIcon Height="16"
                               Margin="0,0,0,8">
                        <ImageIcon.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/Icons/trash.svg" />
                        </ImageIcon.Source>
                    </ImageIcon>
                    <TextBlock x:Uid="Page_HomePage_trash"
                               Style="{StaticResource TextBlockStyle}" />
                </StackPanel>
            </Button>
        </Grid>
        <controls:KSuiteUpgradeBar Grid.Row="3"
                                   Grid.ColumnSpan="2"
                                   Visibility="{x:Bind ViewModel.SelectedSync.Drive.IsPaidOffer, Mode=OneWay, Converter={StaticResource BooleanToInvertedVisibilityConverter }}" />
    </Grid>
</Page>
