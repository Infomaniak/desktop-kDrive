<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="KDrive.CustomControls.SyncStatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KDrive.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>

        <!-- Data templates for different button states -->
        <DataTemplate x:Key="PauseButtonTemplate">
            <Image Margin="0">
                <Image.Source>
                    <SvgImageSource UriSource="ms-appx:///Assets/Icons/pause.svg"/>
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="StartButtonTemplate">
            <Image Margin="0">
                <Image.Source>
                    <SvgImageSource UriSource="ms-appx:///Assets/Icons/play.svg"/>
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="LoadingButtonTemplate">
            <ProgressRing IsActive="True" Height="auto" Width="auto"/>
        </DataTemplate>
        <local:StartPauseButtonTemplateSelector x:Key="StartPauseButtonTemplateSelector"
                                    PauseButtonTemplate="{StaticResource PauseButtonTemplate}"
                                    StartButtonTemplate="{StaticResource StartButtonTemplate}"
                                    LoadingButtonTemplate="{StaticResource LoadingButtonTemplate}"/>

        <!-- Data templates for different status messages -->
        <DataTemplate x:Key="PausedStatusTemplate">
            <TextBlock x:Uid="SyncStatusBar_PausedStatus" Style="{StaticResource BodyStrongTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="SyncingStatusTemplate">
            <TextBlock x:Uid="SyncStatusBar_SyncingStatus" Style="{StaticResource BodyStrongTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="StartingStatusTemplate">
            <TextBlock x:Uid="SyncStatusBar_StartingStatus" Style="{StaticResource BodyStrongTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="PausingStatusTemplate" >
            <TextBlock x:Uid="SyncStatusBar_PausingStatus" Style="{StaticResource BodyStrongTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="SyncedStatusTemplate">
            <TextBlock x:Uid="SyncStatusBar_SyncedStatus" Style="{StaticResource BodyStrongTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="UnknownStatusTemplate">
            <Grid>
                <ProgressBar Width="300" Height="30" IsIndeterminate="True" ShowPaused="False" ShowError="False" Foreground="Blue"/>
                <Rectangle Fill="{ThemeResource AcrylicInAppFillColorDefaultBrush}" Width="300" Height="30" RadiusX="8"/>
            </Grid>
        </DataTemplate>

        <local:TextStatusTemplateSelector x:Key="TextStatusTemplateSelector"
                                          PausedStatusTemplate="{StaticResource PausedStatusTemplate}"
                                          SyncingStatusTemplate="{StaticResource SyncingStatusTemplate}"
                                          StartingStatusTemplate="{StaticResource StartingStatusTemplate}"
                                          PausingStatusTemplate="{StaticResource PausingStatusTemplate}"
                                          SyncedStatusTemplate="{StaticResource SyncedStatusTemplate}"
                                          UnknownStatusTemplate="{StaticResource UnknownStatusTemplate}"
                            />

        <!-- Converter to enable/disable the button based on sync status -->
        <local:SyncStatusToButtonEnabledConverter x:Key="SyncStatusToButtonEnabledConverter"/>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Button 
            x:Name="StartPauseButton" 
            Click="StartPauseButton_Click" 
            ContentTemplateSelector="{StaticResource StartPauseButtonTemplateSelector}" 
            Content="{x:Bind ViewModel.SelectedDrive.SyncStatus, Mode=OneWay}" 
            IsEnabled="{x:Bind ViewModel.SelectedDrive.SyncStatus, Converter={StaticResource SyncStatusToButtonEnabledConverter}, Mode=OneWay}"
            Width="32" Height="32" 
            Margin="0,0,10,0" Padding="8"
            />

        <!-- Text block indicating sync status -->
        <ContentControl ContentTemplateSelector="{StaticResource TextStatusTemplateSelector}" Content="{x:Bind ViewModel.SelectedDrive.SyncStatus, Mode=OneWay}" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
