<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Infomaniak.kDrive.CustomControls.ContentLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Infomaniak.kDrive.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="using:Infomaniak.kDrive.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToInvertedVisibilityConverter x:Key="BooleanToInvertedVisibilityConverter" />

    </UserControl.Resources>
    <Grid>
        <Grid Visibility="{x:Bind IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
              MaxHeight="200">
            <ProgressBar IsIndeterminate="True"
                         CornerRadius="{x:Bind LoaderCornerRadius, Mode=OneWay}" />
            <Border CornerRadius="{x:Bind LoaderCornerRadius, Mode=OneWay}">
                <Border.Background>
                    <AcrylicBrush TintColor="{ThemeResource SystemAccentColor}" 
                        TintOpacity="0.3" />
                </Border.Background>
            </Border>
        </Grid>

        <ContentPresenter Content="{x:Bind LoaderContent, Mode=OneWay}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Visibility="{x:Bind IsLoading, Converter={StaticResource BooleanToInvertedVisibilityConverter}, Mode=OneWay}" />
    </Grid>
</UserControl>
