<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="kDrive_client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:kDrive_client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="kDrive client">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <InfoBar
                x:Name="LanguageSelectionRestartNeededInfoBar"
                x:Uid="LanguageSelectionRestartNeeded"
                IsOpen="False">
            <InfoBar.ActionButton>
                <Button Content="Action" Click="InfoBarRestartButton_Click" />
            </InfoBar.ActionButton>
        </InfoBar>
        <DropDownButton Content="Language">
            <DropDownButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="Auto" Click="AutoSelected"/>
                    <MenuFlyoutItem Text="English" Click="EnglishSelected"/>
                    <MenuFlyoutItem Text="German" Click="GermanSelected"/>
                    <MenuFlyoutItem Text="French" Click="FrenchSelected"/>
                </MenuFlyout>
            </DropDownButton.Flyout>
        </DropDownButton>
    </Grid>
</Window>
